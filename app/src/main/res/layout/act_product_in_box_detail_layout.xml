<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="35px"
            android:paddingTop="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingStart="16dp"
                android:text="创建人:" />

            <TextView
                android:id="@+id/act_inbox_detail_name_textv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingLeft="0dp"
                android:paddingRight="16dp"
                android:paddingStart="0dp"
                tools:text="A100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="35px"
            android:paddingTop="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingStart="16dp"
                android:text="创建时间:" />

            <TextView
                android:id="@+id/act_inbox_detail_time_textv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingLeft="0dp"
                android:paddingRight="16dp"
                android:paddingStart="0dp"
                tools:text="2016-11-10 10:34:33" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="35px"

            android:paddingTop="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingStart="16dp"
                android:text="产品型号:" />

            <TextView
                android:id="@+id/act_inbox_detail_type_textv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingLeft="0dp"
                android:paddingRight="16dp"
                android:paddingStart="0dp"
                tools:text="wd12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="产品列表"
                android:textColor="@color/text_color_gray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/act_inbox_detail_recyclerView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/prd_inbox_commit_btn"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_margin="16dp"
            android:background="@drawable/selector_button_primary"
            android:text="完成清点"
            android:textColor="@color/white"
            android:textSize="18sp">

        </android.support.v7.widget.AppCompatButton>
    </LinearLayout>
</LinearLayout>
