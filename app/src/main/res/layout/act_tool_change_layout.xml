<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include layout="@layout/toolbar_layout"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="设备编号:" />

        <TextView

            android:id="@+id/act_tool_select_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:hint="请选择设备"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_shearch_btn_gry_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/act_tool_select_btn"
            android:layout_width="140px"
            android:layout_height="90px"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape_shearch_btn_bg"
            android:text="选择"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <com.lf.tempcore.tempViews.tempRecyclerView.TempRefreshRecyclerView
        android:id="@+id/temp_refresh_recyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="match_parent">

    </com.lf.tempcore.tempViews.tempRecyclerView.TempRefreshRecyclerView>
</LinearLayout>
