<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/item_exception_deal_stauts_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_exception_daoju_change" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_exception_deal_stauts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="刀具异常" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_exception_deal_index0_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:layout_marginTop="8dp"
                tools:text="发送人：贾友筹" />

            <TextView
                android:id="@+id/item_exception_deal_index1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:layout_marginTop="8dp"
                tools:text="工序：粗加工过" />

 <TextView
                android:id="@+id/item_exception_deal_index2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:layout_marginTop="8dp"
                tools:text="工序：粗加工过" />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
