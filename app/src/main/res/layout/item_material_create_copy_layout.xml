<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:paddingLeft="16dp"
    >

    <ImageView
        android:id="@+id/item_material_image_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_centerVertical="true"
        tools:src="@mipmap/icon_exception"/>

    <TextView
        android:id="@+id/item_material_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_material_image_status"
        tools:text="名称：辅料1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="14dp"
        android:layout_centerVertical="true"
        android:id="@+id/img_delete"
        android:src="@mipmap/icon_delete"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/item_material_text_count"
        android:layout_width="wrap_content"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_toLeftOf="@id/img_delete"
        tools:text="数量：10"/>


</RelativeLayout>
