<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:id="@+id/act_selector_search_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90px"
            android:layout_weight="1"
            android:background="@drawable/shape_search_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_marginLeft="8dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="8dp"
                android:src="@mipmap/icon_temp_search" />

            <EditText
                android:layout_width="match_parent"
                android:background="@color/temp_transparent"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLength="25"
                android:layout_height="match_parent"
                android:id="@+id/act_selector_search_editText" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shape_shearch_btn_bg"
            android:text="搜索"
            android:textColor="@color/colorPrimary"
            android:id="@+id/act_selector_search_btn" />
    </LinearLayout>

    <com.lf.tempcore.tempViews.tempRecyclerView.TempRefreshRecyclerView
        android:id="@+id/temp_refresh_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.lf.tempcore.tempViews.tempRecyclerView.TempRefreshRecyclerView>
</LinearLayout>
